.flashbox
.wrapper
  .chat-side
    .side-header
      .side-header__box
        .side-header__box__user-name
          = current_user.name
        .side-header__box__menu
          .side-header__box__menu__new-group
            = link_to new_group_path do
              = fa_icon 'edit', class:'icon'
          .side-header__box__menu__edit-user
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: 'icon'
           
    .groups
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
              = group.show_last_message
  .chat-main
    .main-header
      .main-header__leftbox
        .main-header__leftbox__current-groupname
          = @group.name
        %h3.main-header__leftbox__menber
          - @group.users.each do|user| 
            = user.name
      = link_to edit_group_path(@group) do
        .main-header__edit-btn Edit
    .massages
      = render @messages
      
    
    .form
      = form_for [@group, @message] , class: 'input-form' do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'